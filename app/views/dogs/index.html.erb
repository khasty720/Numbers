<p id="notice"><%= notice %></p>

<h1>Listing Dogs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Dog Name</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <th scope="row"><%= dog.name %></th>
        <td><%= dog.breed %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%#= link_to 'Destroy', destroy_dog_path(dog.id), data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Display Via JS', dog_path(dog), remote: true %></td>
        <td><%= link_to 'Edit Via JS', edit_dog_path(dog), remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

