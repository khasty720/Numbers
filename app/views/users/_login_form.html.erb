

<%= form_tag({controller: "users", action: "authorize"}, method: "post") do %>
    <p><%= label_tag(:username, "Username:") %></p>
    <p><%= text_field_tag(:username) %></p>
    <p><%= label_tag(:password, "Password:") %></p>
    <p><%= text_field_tag(:password) %></p>
    <p><%= submit_tag("Submit") %></p>
<% end %>
